{
  "name": "qnx-buildfile-lang",
  "displayName": "QNX Buildfile Language Support",
  "description": "Language Server support for QNX buildfiles",
  "version": "1.0.8",
  "publisher": "gvergine",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:qnx-buildfile-lang"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "qnx-buildfile-lang",
        "aliases": ["QNX Buildfile"],
        "extensions": [".build"],
        "filenamePatterns": ["*.build"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qnx-buildfile-lang",
        "scopeName": "source.qnx-buildfile",
        "path": "./syntaxes/qnx-buildfile.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "QNX Buildfile Language",
      "properties": {
        "qnx-buildfile-lang.customValidatorJarPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to a custom validator JAR. The JAR must contain a Main-Class manifest entry pointing to a class that extends BaseDSLValidator. Leave empty for default validation only."
        }
      }
    },
    "commands": [
      {
        "command": "qnx-buildfile-lang.restartServer",
        "title": "QNX Buildfile: Restart Language Server"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
